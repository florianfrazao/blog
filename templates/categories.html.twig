{% extends 'base.html.twig' %}
{% block title %}Liste des catégories{% endblock title %}

{% block main %}
    <h1 class="page-title">{{categories | length }} catégories</h1>
    <div class="flex-container">
    {% for category in categories %}
            {% if category.published %}
                    <div class="card">
                        <a href="{{ path('category', {id: category.id}) }}">
                            <h1>{{ category.title }}</h1>
                            <p>{{ category.desc }}</p>
                            <div class="btn-more">En savoir plus</div>
                        </a>
                    </div>
            {% endif %}
        {% endfor %}
    </div>
{% endblock main %}